<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table"> <!--borderedボーダー付き、condensed行間の狭い-->
    <tr> <!--table row(行)-->
      <td><%= link_to "←", user_path(date: @first_day.prev_month), class:"btn btn-info" %> <!--ボタンの色後で修正-->
      <%= l(@first_day, format: :middle) %> 時間管理表
      <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-info" %> <!--ボタンの色後で修正-->
      </td> <!--table date(データ)-->
      <td>指定勤務時間:<%= format_basic_info(@user.work_time) %></td>
      <td colspan="3">基本時間:<%= format_basic_info(@user.basic_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>
    
    <tr>
      <td>所属: <%= @user.department.present? ? @user.department : "未所属" %></td> <!--存在すればtrueでその値を、存在しなければfalseで未所属となる。-->
      <td>名前:<%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id ="table-attendances">
    <thead> <!-- table headerの略で表のヘッダー部分 -->
      <tr> <!--table rowの略で表の行-->
        <th rowspan="2">日付</th> <!--table headerの略で表の見出し-->
        <th rowspan="2">曜日</th>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th rowspan="2">残業指示</th>
        <th rowspan="2">指示者</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
      </tr>
    </thead>
    
    <tbody> <!--table bodyの略で表の本体部分-->
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td></td>
          <td></td>
          <td>
            <% if (Date.current == day.worked_on) && day.started_at.nil? %> <!--繰り返し処理中の日付と実際の日付における当日が一致することを条件。該当する日付データにはstarted_atがnilであるか？どちらもtrueとなる時のみ、ボタンの出力部分が実行-->
              <%= link_to "出社", user_attendance_path(@user,day), data: { turbo_method: :patch }, class: "btn btn-primary btn-attendance" %> <!--updateアクションに飛ばしている-->
            <% end %>
          </td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>