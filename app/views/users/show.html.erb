<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table"> <!--borderedボーダー付き、condensed行間の狭い-->
    <tr> <!--table row(行)-->
      <td>時間管理表</td> <!--table date(データ)-->
      <td>指定勤務時間:<%= format_basic_info(@user.work_time) %></td>
      <td>基本時間:<%= format_basic_info(@user.basic_time) %></td>
      <td>初日</td>
    </tr>
    
    <tr>
      <td>所属: <%= @user.department.present? ? @user.department : "未所属" %></td> <!--存在すればtrueでその値を、存在しなければfalseで未所属となる。-->
      <td>名前:<%= @user.name %></td>
      <td>出勤日数</td>
      <td>締め</td>
    </tr>
  </table>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id ="table-attendances">
    <thead> <!-- table headerの略で表のヘッダー部分 -->
      <tr> <!--table rowの略で表の行-->
        <th>日付</th> <!--table headerの略で表の見出し-->
        <th>曜日</th>
        <th>勤怠登録</th>
        <th>出勤時間</th>
        <th>退勤時間</th>
        <th>在社時間</th>
        <th>備考</th>
      </tr>
    </thead>
    
    <tbody> <!--table bodyの略で表の本体部分-->
      <% (@first_day..@last_day).each do |day| %>
        <tr>
          <td><%= l(day, format: :short) %></td>
          <td><%= $days_of_the_week[day.wday] %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>